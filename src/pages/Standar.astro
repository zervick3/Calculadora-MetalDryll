---
import Layout from "../layouts/Layout.astro";
import Linkscalculadora from "../components/Linkscalculadora.astro";
import Form from "../components/Form.astro";
import MsgForm from "../components/msgform.astro";
import Msgform from "../components/msgform.astro";
---

<Layout title="Calculando Plancha Standar">
  <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 gap-2">
    <div class="col-span-1">
      <Linkscalculadora />
    </div>

    <div class="col-span-2">
      <div class="p-5 text-center">
        <span class="text1">PLACA STANDAR</span>
        <span class="text2">Para Interiores</span>
      </div>
      <div class="container__form grid grid-cols-1 p-6 m-auto rounded-md">
        <Msgform />
      </div>
    </div>
  </div>
</Layout>
<style>
  span {
    text-transform: uppercase;
    display: block;
  }
  .text1 {
    color: white;
    font-size: 60px;
    font-weight: 700;
    letter-spacing: 8px;
    /* background: black; */
    position: relative;
    animation: text 2.5s 1;
  }
  .text2 {
    font-size: 30px;
    color: #ffd200;
  }

  @keyframes text {
    0% {
      color: black;
      margin-bottom: -40px;
    }
    30% {
      letter-spacing: 25px;
      margin-bottom: -40px;
    }
  }
</style>

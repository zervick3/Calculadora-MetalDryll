---
import Layout from "../layouts/Layout.astro";
import Linkscalculadora from "../components/Linkscalculadora.astro";

import TitleDeCalculos from "../components/TitleDeCalculos.astro";

import ContainerFibrecemento from "../components/Fibrecemento/ContainerFibrecemento.astro";
import ContainerBal60 from "../components/Baldosa60x60/ContainerBal60.astro";
---

<Layout title="Calculando Plancha Standar">
  <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 gap-2">
    <div class="col-span-1">
      <Linkscalculadora />
    </div>

    <div class="col-span-2">
      <TitleDeCalculos title="TECHO CON BALDOSA 0.61M X 0.61M " />
